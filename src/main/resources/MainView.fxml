<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.MainController"
      spacing="0"
      stylesheets="/styles.css"
      styleClass="main-container">

   <!-- Top Header with Emerald Gradient -->
   <VBox style="-fx-background-color: linear-gradient(to right, #0f172a, #059669); -fx-padding: 15 25;">
      <HBox alignment="CENTER_LEFT" spacing="12">
         <Label text="ðŸ¥" styleClass="logo-icon" style="-fx-font-size: 36px; -fx-text-fill: white;" />
         <VBox spacing="2">
            <Label text="Hospital Management System"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Label text="Advanced Healthcare Database Management"
                   style="-fx-font-size: 13px; -fx-text-fill: #b3e0ff; -fx-opacity: 0.9;" />
         </VBox>
      </HBox>
   </VBox>

   <!-- Main Content Area with Tabs -->
   <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
      
      <!-- ADMINISTRATOR TAB -->
      <Tab text="Administrator">
         <fx:include source="AdministratorView.fxml" />
      </Tab>

      <!-- DOCTOR TAB -->
      <Tab text="Doctor">
         <fx:include source="DoctorView.fxml" />
      </Tab>

      <!-- RECEPTIONIST TAB -->
      <Tab text="Receptionist">
         <fx:include source="ReceptionistView.fxml" />
      </Tab>

      <!-- PATIENT TAB -->
      <Tab text="Patient">
         <fx:include source="PatientView.fxml" />
      </Tab>

   </TabPane>
</VBox>