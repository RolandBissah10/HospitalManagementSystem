<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.ReceptionistController"
      spacing="0">
     <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
              styleClass="sidebar-scroll" HBox.hgrow="NEVER"
              style="-fx-background-color: #111827; -fx-min-width: 200; -fx-pref-width: 200; -fx-padding: 0; -fx-background: #111827;">
       <VBox style="-fx-background-color: #111827; -fx-padding: 15;">
          <Label text="FRONT DESK"
                 style="-fx-font-size: 10px; -fx-text-fill: #95a5a6; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
          <VBox spacing="6">
             <Button onAction="#addPatient" styleClass="nav-button"><graphic><HBox spacing="8" alignment="CENTER_LEFT"><Label text="âž•" styleClass="icon-root" style="-fx-text-fill: #10b981;" /><Label text="Register Patient" style="-fx-text-fill: white;" /></HBox></graphic></Button>
             <Button onAction="#viewPatients" styleClass="nav-button"><graphic><HBox spacing="8" alignment="CENTER_LEFT"><Label text="ðŸ‘¥" styleClass="icon-root" style="-fx-text-fill: #10b981;" /><Label text="View Patients" style="-fx-text-fill: white;" /></HBox></graphic></Button>
             <Button onAction="#scheduleAppointment" styleClass="nav-button"><graphic><HBox spacing="8" alignment="CENTER_LEFT"><Label text="ðŸ“…" styleClass="icon-root" style="-fx-text-fill: #0ea5e9;" /><Label text="Book Appointment" style="-fx-text-fill: white;" /></HBox></graphic></Button>
             <Button onAction="#viewDoctors" styleClass="nav-button"><graphic><HBox spacing="8" alignment="CENTER_LEFT"><Label text="ðŸ©º" styleClass="icon-root" style="-fx-text-fill: #10b981;" /><Label text="Doctor List" style="-fx-text-fill: white;" /></HBox></graphic></Button>
          </VBox>
       </VBox>
     </ScrollPane>
     
     <!-- Receptionist Content -->
      <VBox fx:id="contentArea" spacing="20" style="-fx-padding: 30; -fx-background-color: white;" HBox.hgrow="ALWAYS" alignment="TOP_CENTER">
        <Label text="Reception" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #0f172a;" />
        <Label text="Facilitate patient check-ins and registrations." style="-fx-text-fill: #64748b;" />
        
        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <Button text="Register New Patient" onAction="#addPatient" styleClass="btn-primary" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="200" prefHeight="50" />
            <Button text="Schedule Appointment" onAction="#scheduleAppointment" styleClass="btn-primary" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200" prefHeight="50" />
            <Button text="Find Patient" onAction="#searchPatients" styleClass="btn-primary" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="200" prefHeight="50" />
            <Button text="Doctor Availability" onAction="#viewDoctors" styleClass="btn-primary" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" prefHeight="50" />
        </GridPane>
     </VBox>
</HBox>
